<header>
    <nav id="navbar">
        <a href="/">
            <img src="/img/logoSaber.png" alt="logo Saber em Sena" height='60px'>
        </a>

        <ul>
            <li><a href="/posts">Posts</a></li>
            <li><a href="/sobre">Sobre</a></li>
            <li><a href="/contato">Contato</a></li>
        </ul>
    </nav>

    <div id="bannerPrincipal">
        <div id="tituloBanner">
            <p>{{post.title}}</p>
        </div>
        <div id="textoBanner">
            <p>{{post.subtitle}}</p>
        </div>
    </div>
</header>

<div id="contentPost">
    {{#each post.content}}
            {{#isEqual type 'i'}}
                <div class="containerImgPost">
                    <img src="/{{content}}" alt="">
                </div>
            {{else}}
                <p class="conteudo">{{{content}}}</p>
            {{/isEqual}}
    {{/each}}
</div>

